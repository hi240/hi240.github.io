		//1~100 합을 sum에 담아라

	int sum=0;
	for(int i=1;i<101;i++)
	{
		sum+=i;
	}
	System.out.println("1~100: "+sum);
	
	//for문사용해서 1부터 10까지의 홀수의 합을 구하세요. // j%2==0짝수
	int sum1=0;
	for(int i=1;i<=10;i+=2)
	{
		sum1+=i;
	}
	System.out.println("1~10 홀수의 합: "+sum1);
	
	//1~100까지 짝수의 합을 구해라 if문	
	int sum2=0;

		for(int i=0;i<=100;i++)
		{
			if(i%2==0) {
			sum2+=i;}
		}
		System.out.println("1~100까지 짝수의 합은: "+sum2);
		
		
	
	
	
		
		
		
		
		
	}

}
