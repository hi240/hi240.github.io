		//암기할 것. 제어문(Statement)
		//조건문: if문의 종류 (3가지) 단일/else/else if
		//switch(조건){case 값:break;}
		//반복문:for(반복횟수 명확),while(조건 true,false),do~while(){}
		//분기문:break(블럭을 탈출해라),continue(아랫 구문 skip)
		int count=0;
		int a=2;
		if(a>2) System.out.println("a>2");
		else System.out.println(a);
		
		
		/*
		char data='A';
		switch(data) {
		case'A': System.out.println("문자비교");
	    break; //switch 탈출

	    default : System.out.println("나머지모두");
	    break;
		}
