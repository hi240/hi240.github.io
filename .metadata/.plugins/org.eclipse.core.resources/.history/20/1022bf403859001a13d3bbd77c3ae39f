package kr.or.bit;

import java.util.Scanner;

public class Book {
public static void main(String[] args) {
	Scanner sc = new Scanner(System.in); 	
	TestBook publish = new TestBook("서영짱",2000);            //책출판.
	System.out.println("번호를 입력하세요.\n 1.책 이름 \n 2.책 가격");
       int num;
       num=Integer.parseInt(sc.nextLine());
	   if(num==1) {System.out.println(publish.getName());}
	   else if(num==2) {System.out.println(publish.getPrice());}
	   else System.out.println("번호를 제대로 입력하세요");
	}
}
 class TestBook {
	    private String name;
	    private int price;
	    public TestBook(String name,int price) {  //책 출판되면 이름과 가격을 무조건 가지고 있다.
	    	name=name;
	    	price=price;
	        System.out.println("책이 출판되었습니다.");
	    }
	    //getter setter
		public String getName() { 
			return name;
		}
		public int getPrice() {
			return price;
		}
\
		
			
}
	    
 

